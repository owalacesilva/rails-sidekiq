<%= form_for @product, class: 'form' do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :quantity_in_stock %>
    <%= f.text_field :quantity_in_stock, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, ProductCategory.all, :id, :title, { prompt: 'Select a category' }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, Supplier.all, :id, :title, { prompt: 'Select a supplier' }, class: 'form-control' %>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>